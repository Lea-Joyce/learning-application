{% extends "base.html.twig" %}

{% block title %}Registered Client(s){% endblock %}

{% block body %}

<table class="table table-hover" style="width:75%">
    <tr>
      <th scope="row">Course Title</th>
      <td>{{course.title}}</td>
    </tr>
    <tr>
      <th scope="row">Course Description</th>
      <td>{{course.content}}</td>
    </tr>
    <tr>
      <th scope="row">Registered Client(s)</th>
      <td>{% for client in clients %}
      <i class="bi bi-person-circle"></i>
            {{ client.lastName }}, {{ client.firstName }} <br>
            {% endfor %}
      </td>
    </tr>    
</table>

{% endblock %}